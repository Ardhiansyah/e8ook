<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../../partials/head %>
</head>
<body>
  <% include ../../partials/header %>

  <div class="container">
    <% if(status == 1) { %>
    <div class="alert alert-success">
      <strong>Success!</strong> <%= message %>
    </div>
    <% } else if(status == 0) { %>
    <div class="alert alert-danger">
      <strong>Error!</strong> <%= message %>
    </div>
    <% } %>

    <h3>List Readers</h3>
    
    <table class="table">
      <input type="button" onclick="location.href='/readers/add/';" class="btn btn-success pull-right" value="Add Reader" />
      <thead>
        <tr>
          <th>No</th>
          <th>Name</th>
          <th>Address</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i = 0; i < readers.length; i++) { %>
        <tr>
          <td><%= i+1 %></td>
          <td><%= readers[i].name %></td>
          <td><%= readers[i].address %></td>
          <td><%= readers[i].email %></td>
          <td><%= readers[i].phone %></td>
          <td><a href="/readers/<%= readers[i].id %>/edit"><i class="fa fa-edit" style="font-size:24px;color:blue"></i></a>&nbsp;&nbsp;<a href="/readers/<%= readers[i].id %>/delete" onclick="return confirm('Delete This Item?')"><i class="fa fa-remove" style="font-size:24px;color:red"></i></a></td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>

</body>
</html>