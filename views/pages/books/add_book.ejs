<!DOCTYPE html>
<html>
<head>
	<% include ../../partials/head %>
</head>
<body>
	<% include ../../partials/header %>

	<div class="container">
		<% if(status == 1) { %>
		<div class="alert alert-success">
			<strong>Success!</strong> <%= message %>
		</div>
		<% } else if(status == 0) { %>
		<div class="alert alert-danger">
			<strong>Error!</strong> <%= message %>
		</div>
		<% } %>
		<h3>Add Book</h3>
		<form class="form-horizontal" method="post">
			<div class="form-group">
				<label class="col-sm-2 control-label">Title</label>
	      		<div class="col-sm-5">
	        		<input class="form-control" id="title" name="title" type="text" placeholder="Input Title">
	      		</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label">Sinopsis</label>
	      		<div class="col-sm-5">
	        		<input class="form-control" id="sinopsis" name="sinopsis" type="text" placeholder="Input Sinopsis">
	      		</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label">Author</label>
	      		<div class="col-sm-5">
	        		<input class="form-control" id="author" name="author" type="text" placeholder="Input Author">
	      		</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label">Total Page</label>
	      		<div class="col-sm-5">
	        		<input class="form-control" id="total_page" name="total_page" type="number" placeholder="Input Total Page">
	      		</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label">Quantity</label>
	      		<div class="col-sm-5">
	        		<input class="form-control" id="quantity_all" name="quantity_all" type="number" placeholder="Input Quantity">
	      		</div>
			</div>
			<input type="submit" class="btn btn-primary" value="Add Book" style="margin-left: 200px" />
		</form>
	</div>
</body>
</html>